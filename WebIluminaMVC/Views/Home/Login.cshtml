@model WebIluminaMVC.Model.User
@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/css/Login.css">
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body background="http://localhost:1311/img/glass.jpg">
    <br />
    <br />
    <br />
    <br />
    <form id="order-form" novalidate="novalidate" method="post">
        @Html.HiddenFor(model => model.username)
        @Html.HiddenFor(model => model.password)
        <h1>
            Login Notify
        </h1>

        <div class="inset">
            <p>
                <label for="email">Usuario</label>
                <input type="text" name="usuarioLogin" id="usuarioLogin">
            </p>
            <p>
                <label for="password">Contraseña</label>
                <input type="password" name="passwordLogin" id="passwordLogin">
                @if (Model.result == 1)
                {
                    <span>(*)Los datos de acceso son erroneos</span>
                }

            </p>

        </div>

        <p class="p-container">
            <a href="~/Home/Recover">Olvidó su contraseña?</a>
            <br />
            <a href="~/Home/UpdatePassword">Cambio de contraseña</a>
            <br />
            <input type="submit" name="go" id="go" value="Login" onclick="Login()">
        </p>
    </form>
</body>
</html>
<script type="text/javascript">
    function Login() {
        debugger;

        document.getElementById("username").value = document.getElementById("usuarioLogin").value;
        document.getElementById("password").value = document.getElementById("passwordLogin").value;
    }

</script>


