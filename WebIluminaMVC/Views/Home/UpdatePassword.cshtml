@model WebIluminaMVC.Model.User
@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/css/Login.css">
    <meta name="viewport" content="width=device-width" />
    <title>Modifica Contraseña</title>
</head>
<body background="@Settings.Background">
    <br />
    <br />
    <br />
    <br />
    <form id="order-form" novalidate="novalidate" method="post">
        @Html.HiddenFor(model => model.username)
        @Html.HiddenFor(model => model.password)
        @Html.HiddenFor(model => model.newpassword)
        <h1>
            Modifica Contraseña
        </h1>

        <div class="inset">
            <p>
                <label for="email">Usuario</label>
                <input type="text" name="email" id="usuarioLogin">
                <label for="password">Contraseña</label>
                <input type="password" name="passwordLogin" id="passwordLogin">
                <label for="password">Nueva Contraseña</label>
                <input type="password" name="passwordLogin" id="newPasswordLogin">
                @if (Model.result == 3)
                {
                    <span>(*)Ingresar los datos requeridos</span>
                }
                @if (Model.result == 1)
                {
                    <span>(*)Su contraseña fue modificada</span>
                }
            </p>

        </div>

        <p class="p-container">
            <a href="~/Home/Login">Volver</a>
            <input type="submit" name="go" id="go" value="Modificar" onclick="Recover()">
        </p>
    </form>
</body>
</html>
<script type="text/javascript">
    function Recover() {
        debugger;

        document.getElementById("username").value = document.getElementById("usuarioLogin").value;
        document.getElementById("password").value = document.getElementById("passwordLogin").value;
        document.getElementById("newpassword").value = document.getElementById("newPasswordLogin").value;
    }

</script>


