@model WebIluminaMVC.ModelView.SurveyView

@{
    ViewBag.Title = "Create";
}

<div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">

    <header>
        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
        <h2>Nueva Encuesta</h2>

    </header>

@using (Html.BeginForm())
{
    <div>
        <div class="jarviswidget-editbox">
        </div>
        <div class="widget-body">
            <fieldset>


                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.survey.createUser)
                    @Html.HiddenFor(model => model.survey.createDate)
                    @Html.HiddenFor(model => model.survey.updateUser)
                    @Html.HiddenFor(model => model.survey.updateDate)
                    @Html.HiddenFor(model => model.survey.surveyID)
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(model => model.survey.name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.survey.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.survey.name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.survey.dateTo, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="input-group col-md-4">
                                        <input type="text" name="CtrlDateFrom" placeholder="Seleccionar Fecha" class="form-control datepicker" data-dateformat="dd/mm/yy">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.survey.dateTo, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="input-group col-md-4">
                                        <input type="text" name="CtrlDateTo" placeholder="Seleccionar Fecha" class="form-control datepicker" data-dateformat="dd/mm/yy">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                            



                        <div class="form-group">
                            @Html.LabelFor(model => model.survey.active, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.survey.active)
                                    @Html.ValidationMessageFor(model => model.survey.active, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4">

                                <a data-toggle="modal" href="#mySurveyDetail" class="btn bg-color-blueDark txt-color-white header-btn hidden-mobile"><i class="fa fa-circle-arrow-up fa-lg"></i> Agregar Preguntas</a>

                            </div>
                            <div class="col-sm-8">
                            </div>
                        </div>


                    </div>


                @if (Model.surveyDetailList != null)
                {
                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.surveyDetail.surveyDetailID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.surveyDetail.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.surveyDetail.type)
                            </th>                          
                            <th>
                                @Html.DisplayNameFor(model => model.surveyDetail.active)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            @foreach (var item in Model.surveyDetailList)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.surveyDetailID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.active)
                                </td>                                
                                <td>
                                    @Html.ActionLink("Opciones", "Option", new { id = item.surveyDetailID }) |
                                    @Html.ActionLink("Modificar", "Edit", new { id = item.surveyDetailID }) |                                   
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.surveyDetailID })
                                </td>
                            </tr>
                            }

                    </tbody>
                </table>
               }
                </fieldset>
            </div>
        </div>





            <div class="modal fade" id="mySurveyDetail" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title">
                                <img src="@Settings.CurrentLogo" width="150" alt="SmartAdmin">
                            </h4>
                        </div>
                        <div class="modal-body no-padding">

                            <form id="login-form" class="smart-form">
                                <fieldset>
                                    <section>
                                        <br />                               
                                        @Html.HiddenFor(c=>c.surveyDetail.surveyDetailID)
                                        <div class="form-horizontal">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.surveyDetail.name, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-6">
                                                    @Html.EditorFor(model => model.surveyDetail.name, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.surveyDetail.name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.surveyDetail.type, htmlAttributes: new { @class = "control-label col-md-2" })

                                                <div class="form-group">
                                                    
                                                    <div class="col-md-3">

                                                        <select class="form-control" id="select-1">
                                                            <option>Radio</option>
                                                            <option>Checkbox</option>
                                                        </select>

                                                    </div>
                                                </div>
                                            </div>                                           

                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-offset-2 col-md-10">
                                                        <input type="submit" value="Registrar" class="btn bg-color-blueDark txt-color-white" />
                                                        @Html.ActionLink("Registrar", "Create", null, new { @class = "btn bg-color-blueDark txt-color-white" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </section>
                                </fieldset>
                            </form>
                        </div>

                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

}

</div>