@using WebIluminaMVC.DataAccess;
    <!-- HEADER -->
<header id="header">
    <div id="logo-group">        
            <span id="logo"> <img src="~/content/img/logo.png" alt="SmartAdmin"> </span>
    </div>
    <div>
        <br />
        @DataUtil.GetUser().messageWelcome
    </div>


    <section id="top-right">
        @if (@Model is HelperResult)
        {
            @Model
        }
        else
        {
            <div class="pull-right">
                @Html.Partial("_TopRight")
            </div>
        }
    </section>
</header>
