@model IEnumerable<WebIluminaMVC.Model.Role>

@{
    ViewBag.Title = "Index";
}

<div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">

    <header>
        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
        <h2>Usuarios</h2>

    </header>
    <div>
        <div class="jarviswidget-editbox">
        </div>
        <div class="widget-body">
            <fieldset>

                <div class="row">
                    <div class="col-sm-4">
                        @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn bg-color-blueDark txt-color-white" })
                    </div>
                    <div class="col-sm-8">
                    </div>
                </div>
                <br />

                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                    <thead>
                        <tr>
                            <th>
                                RolID
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Activo
                            </th>
                            <th></th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.roleID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.active)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Modificar", "Edit", new { id = item.roleID }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.roleID })
                                    </td>
                                </tr>
                            }

                        </tbody>
                </table>
            </fieldset>
        </div>
    </div>
</div>

